<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sesoc.global.escape.dao.RoomDAO">	
	<insert id="insertRoom" parameterType="Room">
	insert into room(no, master_id, title
	<if test="room_pw != null">
	, room_pw
	</if>
	)
	values(room_seq.nextval, #{master_id}, #{title}
	<if test="room_pw != null">
	, #{room_pw}
	</if>
	)
	</insert>
	
	<delete id="deleteRoom" parameterType="Room">
	delete from room
	where no = #{no}
	</delete>
	
	<insert id="insertWaitingUser" parameterType="WatingUser">
	insert into wating_users
	values(wating_users_seq.nextval, #{map_no}, #{user_id})
	</insert>
	
	<delete id="deleteWaitingUser" parameterType="WatingUser">
	delete from wating_users
	where no = #{no}
	</delete>
</mapper>
